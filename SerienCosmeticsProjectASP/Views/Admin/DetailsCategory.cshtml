@model SerienCosmeticsProjectASP.Models.Category

@{
    ViewBag.Title = "DetailsCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết danh mục</h4>
            <p class="card-description"> Danh mục </p>
            <form class="forms-sample">
                <div class="form-group row">

                    @Html.LabelFor(model => model.IDCate, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">

                        @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.NameCate, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">

                        @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "EditCategory", new { IDCate = Model.IDCate })
    @Html.ActionLink("Quay về", "CategoryList")
</p>

