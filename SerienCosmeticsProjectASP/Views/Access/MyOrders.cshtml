@model IEnumerable<SerienCosmeticsProjectASP.Models.Order>

@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@{var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }




    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/Content/source/img/banner3.jpeg")">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Đơn hàng</h2>
                        <div class="breadcrumb__option">
                            <a href="@Url.Action("Index","Home")">Trang chủ</a>
                            <a href="@Url.Action("MyOrders","Access")">Đơn hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Mã Đơn Hàng</th>
                                    <th>Số Lượng</th>
                                    <th>Sản Phẩm</th>
                                    <th>Giá Tiền</th>
                                    <th>Ngày đặt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    foreach (var detail in order.OrderDetails)
                                    {
                                        <tr>
                                            <td>@order.OrderID</td>
                                            <td>@detail.Quantity</td>
                                            <td>@detail.NamePro</td>
                                            <td>@String.Format(format, "{0:c0}", detail.UnitPrice)</td>
                                            <td>@order.OrderDate</td>
                                        </tr>
                                    }
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <div class="row d-flex justify-content-between">
                    <div class="col-5" style=" width: 49%;">
                        @Html.ActionLink("Quay lại", "AccountInfo", "Access", null, new { @class = "btn btn-gradient-primary btn-lg font-weight-medium auth-form-btn w-100", @style = "background-color: #9e2b4f; color: white;" })
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->


