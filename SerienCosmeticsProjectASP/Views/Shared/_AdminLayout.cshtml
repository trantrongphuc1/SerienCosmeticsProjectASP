
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Serien Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Content/AdminLayout/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/AdminLayout/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Content/AdminLayout/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Content/AdminLayout/images/favicon.ico" />
    
</head>
<body>
    @{var user = HttpContext.Current.Session["user"];}
    <div class="container-scroller">
        <!-- partial:../partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="@Url.Action("Index", "Admin")"><img src="~/Content/AdminLayout/images/footerlogo.png" alt="logo" /></a>

            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">


                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a  id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">

                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">

                                    @user
                                </p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">

                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("LogoutAdmin", "Admin")">
                                <i class="mdi mdi-logout me-2 text-primary"></i> Đăng xuất
                            </a>
                        </div>
                    </li>
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Admin")">
                            <span class="menu-title">Trang chủ</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle ="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <span >Danh mục quản lý</span>
                            
                            <i class="mdi mdi-crosshairs-gps menu-icon"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"><a class="nav-link"   href="@Url.Action("Product","Admin", new { area = "admin" })">Quản lý sản phẩm</a></li>
                                <li class="nav-item"> <a class="nav-link"  href="@Url.Action("CategoryList","Admin", new { area = "admin" })">Quản lý danh mục</a></li>
                                <li class="nav-item"> <a class="nav-link"  href="@Url.Action("CustomerList","Admin", new { area = "admin" })">Quản lý tài khoản</a></li>
                                <li class="nav-item"> <a class="nav-link"  href="@Url.Action("OrderList","Admin", new { area = "admin" })">Quản lý đơn hàng</a></li>
                            </ul>
                        </div>
                    </li>






                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © Serien Cosmetics 2024</span>

                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Content/AdminLayout/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Content/AdminLayout/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Content/AdminLayout/js/jquery.cookie.js" type="text/javascript"></script>
    
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Content/AdminLayout/js/off-canvas.js"></script>
    <script src="~/Content/AdminLayout/js/hoverable-collapse.js"></script>
    <script src="~/Content/AdminLayout/js/misc.js"></script>
    <script src="~/Scripts/script.js"></script> </script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Content/AdminLayout/js/dashboard.js"></script>
    <script src="~/Content/AdminLayout/js/todolist.js"></script>
    <!-- End custom js for this page -->
</body>
</html>
