@model SerienCosmeticsProjectASP.Models.Cart
@{
    Layout = null;
}

@{var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Serien Template">
    <meta name="keywords" content="Serien, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SERIEN Cosmetics | Official Website</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/source/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/source/css/style.css" type="text/css">

</head>
<body>
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Checkout</h2>
                        <div class="breadcrumb__option">
                            <a href="./index.html">Home</a>
                            <span>Checkout</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Checkout Section Begin -->
    
        
        <section class="checkout spad">
            <div class="container">

                <div class="checkout__form">
                    <h4>
                        Thông tin khách hàng
                        <p> Đã có tài khoản? <a href="@Url.Action("Login", "Access")" class="text-primary">Đăng nhập</a></p>
                    </h4>
                    @using (Html.BeginForm("PlaceOrder", "ShoppingCart", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-lg-8 col-md-6">

                                <div class="checkout__input">
                                    <p>Họ Tên<span>*</span></p>
                                    <input type="text" name="FullName" required>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Số điện thoại<span>*</span></p>
                                            <input type="number" name="Phone" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Email<span>*</span></p>
                                            <input type="email" name="Email" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="checkout__input">
                                    <p>Địa chỉ<span>*</span></p>
                                    <input type="text" placeholder="Nhập địa chỉ..." class="checkout__input__add" name="Address" required>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="checkout__order">
                                    <h4>Đơn hàng của bạn</h4>
                                    <div class="checkout__order__products">Products <span>Total</span></div>
                                    <ul>
                                        @foreach (var item in Model.Items)
                                        {
                                            <li>@item._product.NamePro <span>@String.Format(format, "{0:c0}", item._product.Price)</span></li>
                                        }
                                    </ul>
                                    <div class="checkout__order__total">
                                        <input type="text" placeholder="Nhập mã coupon..." style="width: calc(100% - 120px); padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">
                                        <span style="margin-top: -8px;"><button type="button" style="float: right; padding: 8px 12px; font-size: 14px; color: #fff; background-color: #94143C; border: none; border-radius: 4px; cursor: pointer; margin-left: 8px;">NHẬP MÃ</button></span>
                                    </div>
                                    <div class="checkout__order__total">Tạm tính <span>@String.Format(format, "{0:c0}", ViewBag.TotalAmount)</span></div>
                                    <div class="checkout__order__total">Tổng cộng <span>@String.Format(format, "{0:c0}", ViewBag.TotalAmount)</span></div>
                                    
                                    <button type="submit" class="site-btn">ĐẶT HÀNG</button>

                                </div>
                            </div>
                        </div>
                    }
                    </div>
            </div>
        </section>
        <!-- Checkout Section End -->
    }
</body>
