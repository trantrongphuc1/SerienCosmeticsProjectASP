@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@model SerienCosmeticsProjectASP.Models.HomeModel
@{ var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
    <!-- Hero Section Begin -->
<div style="text-align: center;">@TempData["success"]</div>
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>DANH MỤC</span>
                        </div>
                        <ul>
                            <br />
                            @foreach (var item in Model.ListCategory)
                            {
                                <li>
                                    @Html.ActionLink(item.NameCate, "ProductCate", "Category", new { @Id = item.IDCate }, null)
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form action="@Url.Action("Index", "Product")" method="get">
                                <input type="text" name="SearchString" value="@ViewData["SearchString"]" placeholder="Bạn đang cần gì?">
                                <button type="submit" class="site-btn" ><img src="~/Content/source/img/icon_search.png" alt="search" /></button>
                                
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+84 5553124567</h5>
                                <span>HỖ TRỢ 24/7</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero__item set-bg" data-setbg="@Url.Content("~/Content/source/img/hero/banner2.png")">
                        <div class="hero__text">
                            <span>SERIEN Cosmetics</span>
                            <h2>Mỹ Phẩm <br />100% Nhập Khẩu</h2>
                            <p>Free Ship và nhiều ưu đãi khác</p>
                            <a href="@Url.Action("Index","Product")" class="primary-btn">MUA NGAY</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>SẢN PHẨM</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                @foreach (var item in Model.ListProduct)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" >
                               <img src="~/Content/source/img/product/@item.ImagePro"/>
                                <ul class="featured__item__pic__hover">

                                    <li>
                                        <a href="/ShoppingCart/AddToCart/@item.ProductID"><i class="fa fa-shopping-cart"></i></a>

                                    </li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="@Url.Action("Detail","Product", new { Id = item.ProductID })">@item.NamePro</a></h6>
                                <h5>@String.Format(format, "{0:c0}",item.Price)</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Featured Section End -->
    <!-- Banner Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>SERIEN SWEETIES</h2>
                    </div>
                    <div class="banner">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="banner__pic">
                                        <a href="@Url.Action("Index","Product")" /><img  style="border-radius: 25px" src="~/Content/source/img/banner/banner1.jpg" alt="">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="banner__pic">
                                        <a href="@Url.Action("Index","Product")" /><img style="border-radius: 25px" src="~/Content/source/img/banner/banner2.jpg" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Banner End -->
